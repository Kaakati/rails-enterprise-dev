{
  "description": "Rails Enterprise Development workflow hooks for skill discovery and quality validation",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/discover-skills.sh",
            "timeout": 10,
            "description": "Discover available skills in project"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/detect-rails-context.sh",
            "timeout": 5,
            "description": "Detect Rails development tasks and suggest workflow"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "tool:Bash && args.command:git commit",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/pre-commit-validation.sh",
            "timeout": 30,
            "description": "Run linters and validation before commit"
          }
        ]
      },
      {
        "matcher": "tool:Edit|tool:Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/verify-assumptions.sh",
            "timeout": 10,
            "description": "Verify context before code generation to prevent assumption bugs",
            "env": {
              "TOOL_NAME": "${tool}",
              "FILE_PATH": "${args.file_path}",
              "NEW_STRING": "${args.new_string}"
            }
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "tool:Edit|tool:Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/detect-refactoring.sh",
            "timeout": 10,
            "description": "Auto-detect refactorings from file changes"
          }
        ]
      }
    ]
  }
}
